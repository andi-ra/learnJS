{
  "env": { "es2023": true, "node": true },
  "parserOptions": { "ecmaVersion": 2023, "sourceType": "module" },
  "plugins": ["vitest"],
  "extends": ["plugin:vitest/recommended"],
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": { "vitest/globals": true }
    }
  ],
  "rules": {
    "node/no-unsupported-features/es-syntax": "off"
  }
}
